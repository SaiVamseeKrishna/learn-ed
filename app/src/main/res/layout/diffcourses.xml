<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/udemycourses" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Category Channels"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/textView8" />
<HorizontalScrollView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView8">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:text="Business"/>
    <Button
        android:id="@+id/iv5"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="45dp"
        android:text="Design"
        app:srcCompat="@drawable/texturackground" />
    <Button
        android:id="@+id/iv6"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/iv5"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="45dp"
        android:text="Photography"
        app:srcCompat="@drawable/texturackground" />
    <Button
        android:id="@+id/iv7"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/iv6"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="45dp"
        android:text="Music"
        app:srcCompat="@drawable/texturackground" />
        <Button
        android:id="@+id/iv8"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/iv7"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="45dp"
        android:text="Development"
        app:srcCompat="@drawable/texturackground" />
    </RelativeLayout>
</HorizontalScrollView>
</RelativeLayout>
