<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/login_dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="149dp"
        android:textColor="@android:color/white"
        android:text="UserName" />

    <EditText
        android:id="@+id/etUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUN"
        android:layout_alignStart="@+id/tvUN"
        android:layout_below="@+id/tvUN"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:hint="Enter User Name" />

    <TextView
        android:id="@+id/tvPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUN"
        android:layout_alignLeft="@+id/etUN"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="Password" />

    <EditText
        android:id="@+id/etPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPWD"
        android:layout_alignStart="@+id/tvPWD"
        android:layout_below="@+id/tvPWD"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:hint="Enter Password" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPWD"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_toEndOf="@+id/tvPWD"
        android:layout_toRightOf="@+id/tvPWD"
        android:text="Login" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etPWD"
        android:layout_alignRight="@+id/etPWD"
        android:layout_below="@+id/btnLogin"

        android:background="@color/colorPrimary"
        android:text="Not a member ? Sign up!!"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/etUN"
        android:layout_alignLeft="@+id/btnSignup"
        android:layout_alignStart="@+id/btnSignup"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/learnedforfacebook" />
</RelativeLayout>
